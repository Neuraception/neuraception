---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Neuraception',
  ignoreTitleTemplate: true,
  image: '~/assets/images/hero-image.svg',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get a quote',
        href: 'https://neuraception.com/start',
        target: '_blank',
        icon: 'tabler:message',
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline">Empowering Vision and Language with</span>
      <span class="text-accent dark:text-white highlight"> Neuraception</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Neuraception</span> provides cutting-edge AI solutions for both vision and language,
        including custom models for classification, detection, segmentation, heatmaps, and NLP tasks.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600"
        >Neuraception: AI-driven Vision and Language Solutions.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What Neuraception Offers"
    subtitle="Harness the power of AI with our state-of-the-art vision and language models, optimized for your unique requirements."
    items={[
      {
        title: 'Custom AI Vision Models',
        description:
          'Whether it’s classification, detection, segmentation, or custom requirements, our models are built to excel.',
        icon: 'tabler:tools',
      },
      {
        title: 'Natural Language Processing (NLP) Solutions',
        description:
          'From clustering free text logs to visual analysis of relationships between text data, our NLP models are tailored to your specific needs.',
        icon: 'tabler:text-recognition',
      },
      {
        title: 'Ready-to-use Solutions',
        description:
          'Pre-built models and tools that integrate seamlessly into your operations, saving time and maximizing efficiency.',
        icon: 'tabler:device-desktop-analytics',
      },
      {
        title: 'Data Security',
        description:
          'Neuraception’s solutions can operate completely offline ensuring total data privacy and security.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Scalable Performance',
        description:
          'Our models are optimized for speed and accuracy, providing real-time insights without compromising quality.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Tailored for Your Needs',
        description:
          'We work closely with you to customize our AI solutions, ensuring they meet your exact specifications.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Flexible Deployment Options',
        description:
          'Deploy our AI models on State Of The Art hardware or IoT edge devices, ensuring seamless and efficient performance.',
        icon: 'tabler:cpu',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside Neuraception"
    title="Neuraception's Blueprint: Precision Meets Security"
    items={[
      {
        title: 'State-of-the-Art AI Models',
        description:
          'Utilizing the latest advancements in AI to deliver top-tier vision and language models that exceed expectations.',
        icon: 'tabler:flask',
      },
      {
        title: 'Secure Operations',
        description:
          'Our solutions run entirely offline providing unmatched data security and flexibility to meet your needs.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Tailored to Your Industry',
        description:
          'Whether you’re in manufacturing, healthcare, or any other sector, we customize our vision and NLP models to meet your needs. Our solutions can be deployed on embedded GPU devices ensuring optimal performance in any environment.',
        icon: 'tabler:device-desktop-analytics',
      },
    ]}
    image={{
      src: '~/assets/images/bio.png',
      alt: 'Neuraception Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Building on modern AI foundations
      </h3>
      Empower your operations with our secure and scalable AI vision and NLP solutions, deployable on cutting-edge platform.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High level of customization',
        description: `Tailor our AI models to your exact needs, ensuring precision and relevance in every application.`,
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Fully responsive solutions',
        description: 'Our models are designed to adapt and perform optimally across various devices and setups.',
        icon: 'tabler:devices',
      },
      {
        title: 'Real-time processing',
        description:
          'Experience real-time inferencing and data insights with Neuraception’s optimized vision and NLP models.',
        icon: 'tabler:clock',
      },
    ]}
    image={{
      src: '~/assets/images/seg-can.png',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced operational efficiency',
        description: 'Leverage our AI to streamline your processes, improve accuracy, and reduce operational costs.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Efficient resource utilization',
        description:
          'Skip the heavy costs and resources associated with cloud-based solutions with our flexible offline models.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Dedicated support',
        description: `Our team is here to ensure your success with ongoing support.`,
        icon: 'tabler:help',
      },
    ]}
    image={{
      src: '~/assets/images/image.png',
      alt: 'AI Operations Image',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get started with Neuraception's AI Solutions."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Contact Us</span>',
        description:
          "Reach out to discuss your needs. We're ready to understand your vision and provide the best solutions.",
        icon: 'tabler:phone-call',
      },
      {
        title: 'Step 2: <span class="font-medium">Customize</span>',
        description: 'Work with our team to tailor our AI models to your exact specifications, ensuring a perfect fit.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Step 3: <span class="font-medium">Deploy</span>',
        description: 'Deploy your customized AI solution with full support from our team.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

