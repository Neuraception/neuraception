---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Transparent Pricing for Tailored AI Solutions"
    subtitle="Choose the perfect plan that aligns with your project needs and budget."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Flexible pricing to suit different project scales"
    prices={[
      {
        title: 'Pilot / Proof of Concept',
        subtitle: 'Ideal for initial testing and validation',
        price: 2500,
        period: 'one-time fee',
        items: [
          {
            description: 'Custom AI model development for initial use case',
          },
          {
            description: 'Basic data processing and model training',
          },
          {
            description: 'Offline deployment and testing',
          },
          {
            description: 'Detailed project report and future recommendations',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: 'Standard',
        subtitle: 'Optimal choice for small to mid-sized projects',
        price: 7500,
        period: 'one-time fee',
        items: [
          {
            description: 'Advanced AI model development for multiple use cases',
          },
          {
            description: 'Comprehensive data processing and model optimization',
          },
          {
            description: 'Complete offline deployment and integration',
          },
          {
            description: 'Ongoing support and model fine-tuning',
          },
          {
            description: 'Scalability options for future growth',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Tailored for large-scale and complex projects',
        price: 20000,
        period: 'custom pricing',
        items: [
          {
            description: 'Bespoke AI model development with full customization',
          },
          {
            description: 'Extensive data analysis and continuous model improvement',
          },
          {
            description: 'Full offline and secure deployment across multiple locations',
          },
          {
            description: 'Dedicated project management and technical support',
          },
          {
            description: 'Continuous updates and AI model upgrades',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact us',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing Neuraception"
    columns={2}
    items={[
      {
        title: 'Flexible Pricing Plans',
        description: 'Choose from a range of pricing plans designed to meet the needs of different project scopes.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly defined pricing with no hidden costs, ensuring transparency and trust.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Use secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Quick Start',
        description: `Get started quickly with our straightforward pricing and immediate project kickoff.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Value Upgrades',
        description: 'Easily upgrade your plan to access more features and better scalability as your project grows.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24/7 Support',
        description: 'Our team is available around the clock to assist with any questions or issues.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A simple process from consultation to deployment"
    tagline="Streamlined engagement"
    isReversed={true}
    items={[
      {
        title: 'Consult with us',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a pricing plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review your order',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter payment details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Project confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Start your AI journey with Neuraception',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="We're here to answer any questions you may have about our pricing and plans."
    columns={1}
    items={[
      {
        title: 'Do the plans come with technical support?',
        description:
          'Yes, all our plans include dedicated technical support to assist you throughout your AI project.',
      },
      {
        title: 'Is there a trial period available?',
        description:
          'While we don’t offer a trial period, our pilot phase provides a low-cost option to test and validate our AI solutions.',
      },
      {
        title: 'Can I upgrade or downgrade my plan?',
        description:
          'Absolutely! You can easily adjust your plan to match the evolving needs of your project.',
      },
      {
        title: 'What payment methods are accepted?',
        description:
          'We accept all major credit cards and online payment methods for secure and convenient transactions.',
      },
      {
        title: 'Are there any additional costs beyond the listed price?',
        description:
          'No, all features and services included in each plan are clearly stated, with no hidden fees.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to transform your operations?"
    subtitle="Join our growing list of satisfied clients who have elevated their businesses with Neuraception’s AI solutions."
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: '/',
      },
    ]}
  />
</Layout>
