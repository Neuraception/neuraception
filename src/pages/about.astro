---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Empowering Vision with <br />
      <span class="text-accent dark:text-white highlight"> AI-Driven Precision</span>
    </Fragment>

    <Fragment slot="subtitle">
      Neuraception is at the forefront of AI vision technology, providing cutting-edge solutions for classification, detection, segmentation, heatmaps, and more. Our state-of-the-art models are customized to meet the unique demands of our clients, ensuring precision, scalability, and complete data security through offline, isolated operations.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Neuraception by the Numbers"
    stats={[
      { title: 'Global Locations', amount: '4' },
      { title: 'AI Models Deployed', amount: '500+' },
      { title: 'Industries Served', amount: '50+' },
      { title: 'Years in AI', amount: '10+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our AI Vision Solutions"
    subtitle="At Neuraception, we specialize in delivering top-tier AI vision models tailored to a variety of industries, ensuring that our clients receive solutions that are both powerful and secure."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Classification Models',
        description:
          'Our classification models are designed to accurately identify and categorize objects within images or videos, providing reliable insights across various applications.',
        icon: 'tabler:template',
      },
      {
        title: 'Detection Models',
        description:
          'Neuraception’s detection models offer precision in identifying objects, ensuring every detail is captured for informed decision-making.',
        icon: 'tabler:template',
      },
      {
        title: 'Segmentation Models',
        description:
          'Our segmentation models deliver pixel-perfect accuracy, allowing for detailed analysis and high-resolution insights.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Heatmaps',
        description:
          'Visualize areas of interest within images or videos with our heatmap models, ideal for pattern recognition and detailed analysis.',
        icon: 'tabler:template',
      },
      {
        title: 'Custom AI Solutions',
        description:
          'Neuraception offers bespoke AI solutions, crafted to meet the specific needs of our clients, ensuring optimal performance and relevance.',
        icon: 'tabler:template',
      },
      {
        title: 'Real-time Processing',
        description:
          'Experience the power of real-time data processing with our AI models, designed to provide instant insights and enhanced operational efficiency.',
        icon: 'tabler:template',
      },
      {
        title: 'Offline Operations',
        description:
          'Our models operate completely offline, ensuring that your data remains secure and private, without the need for cloud-based services.',
        icon: 'tabler:template',
      },
      {
        title: 'Scalability',
        description:
          'Neuraception’s solutions are built to scale, providing flexibility and adaptability as your needs evolve.',
        icon: 'tabler:template',
      },
      {
        title: 'Support & Maintenance',
        description:
          'We provide ongoing support and maintenance, ensuring that our AI models continue to perform at their best, long after deployment.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="Neuraception is driven by a commitment to innovation, security, and client satisfaction. We strive to lead the industry with our advanced AI technologies while maintaining the highest standards of integrity and service."
    items={[
      {
        title: 'Client-Centric Approach',
        description:
          'At Neuraception, our clients are at the heart of everything we do. We work closely with you to understand your needs and deliver solutions that exceed your expectations.',
      },
      {
        title: 'Innovation & Excellence',
        description:
          'We are dedicated to continuous innovation, ensuring that our AI models remain at the cutting edge of technology and deliver outstanding performance.',
      },
      {
        title: 'Integrity & Transparency',
        description:
          'We believe in doing business with integrity. Our operations are transparent, and our commitment to ethical practices is unwavering.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Achievements"
    subtitle="Over the years, Neuraception has established itself as a leader in AI vision technology, with a strong global presence and numerous accolades to our name."
    isReversed={true}
    callToAction={{
      text: 'Learn more',
      href: '/',
    }}
    items={[
      {
        title: 'Global Impact',
        description: 'With operations spanning four continents, Neuraception is making a global impact in AI vision technology.',
        icon: 'tabler:globe',
      },
      {
        title: 'Client Satisfaction',
        description:
          'Our clients consistently provide positive feedback, praising our solutions for their precision, reliability, and security.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Industry Recognition',
        description:
          'Neuraception has been recognized as an industry leader, earning numerous awards for innovation and excellence in AI.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find Us"
    columns={4}
    items={[
      {
        title: 'United States',
        description: '1234 AI Way, Innovation City, CA 94043',
      },
      {
        title: 'Spain',
        description: '5678 AI Avenue, Madrid, 28001',
      },
      {
        title: 'Australia',
        description: '9012 AI Boulevard, Sydney, NSW 2000',
      },
      {
        title: 'Brazil',
        description: '3456 AI Street, São Paulo, 01000-000',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technical Support"
    tagline="Contact Us"
    columns={2}
    items={[
      {
        title: 'Chat with Us',
        description:
          'Our support team is available to assist you with any questions or issues you may have. Reach out to us via chat for quick responses.',
        icon: 'tabler:messages',
      },
      {
        title: 'Call Us',
        description:
          'Need immediate assistance? Call our support team for real-time help with your Neuraception solutions.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
